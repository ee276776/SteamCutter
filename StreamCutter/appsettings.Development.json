{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "StreamCutter": {
    "FFmpegPath": "ffmpeg",
    "TempDirectory": "/app/temp",
    "MaxFileSizeMB": 100,
    "TimeoutMinutes": 10,
    "CleanupIntervalMinutes": 30,
    "AllowedFileTypes": [
      "audio/mpeg",
      "audio/wav",
      "audio/mp3",
      "audio/mp4",
      "audio/ogg",
      "video/mp4",
      "video/avi",
      "video/quicktime",
      "video/x-msvideo",
      "video/webm"
    ]
  }
}